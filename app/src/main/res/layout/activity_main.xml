<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Hello "
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/carTypetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your car is "
        android:layout_below="@id/nametxt"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:onClick="startScript"
        android:layout_below="@id/carTypetxt"
        android:layout_centerInParent="true"
        android:drawableStart="@drawable/start_icon"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:onClick="stopScript"
        android:layout_below="@id/startButton"
        android:drawableStart="@drawable/stop_icon"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/shutdownButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown"
        android:onClick="shutdownScript"
        android:layout_below="@id/stopButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#D70909"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_below="@id/shutdownButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
